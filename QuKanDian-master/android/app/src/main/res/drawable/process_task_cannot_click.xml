<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" >

        <shape android:shape="rectangle">

            <corners
                android:radius="18dp"
                />

            <solid
                android:color="#F3F3F3"
                />
            <stroke
                android:dashGap="0dp"
                android:width="0.5dp"
                android:color="#B5B5B5" />
        </shape>

    </item>

    <item  android:id="@android:id/progress"
        android:left="1.5dp" android:right="1.5dp" android:bottom="1.5dp" android:top="1.5dp">
        <scale  android:scaleWidth="100%">
            <shape android:shape="rectangle">
              <corners android:radius="18dp" />
              <solid android:color="#c8c8c8" />
                <gradient
                    android:angle="270"
                    android:centerX="0.5"
                    android:centerY="0.5"
                    android:endColor="#c8c8c8"
                    android:startColor="#eceaec"
                    android:type="linear" />
            </shape>
        </scale>
    </item>
</layer-list>

