<?xml version="1.0" encoding="utf-8"?><!--  
    类名：   selector_frame_gray_red   类名注释  视频，新闻详情是否喜欢背景框      -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <!-- 圆角 -->
            <corners
                android:radius="4dp"
                /><!-- 设置圆角半径 -->
            <!-- 填充 -->
            <solid
                android:color="@color/transparent"/>
            <!-- 填充的颜色 -->

            <!-- 描边 dashWidth：实线宽度   dashGap,虚线宽度-->
            <stroke
                android:width="1px"
                android:color="#F43D19"
                android:dashWidth="0px"
                android:dashGap="0px"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <!-- 圆角 -->
            <corners
                android:radius="4dp"
                /><!-- 设置圆角半径 -->
            <!-- 填充 -->
            <solid
                android:color="#00000000"/>
            <!-- 填充的颜色 -->
            <!-- 描边 dashWidth：实线宽度   dashGap,虚线宽度-->
            <stroke
                android:width="1px"
                android:color="#bfbfbf"
                android:dashWidth="0px"
                android:dashGap="0px"/>
        </shape>
    </item>
</selector>