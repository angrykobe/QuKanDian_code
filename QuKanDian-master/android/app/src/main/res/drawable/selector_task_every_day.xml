<?xml version="1.0" encoding="utf-8"?><!--  
    类名：   selector_task_every_day.xmlxml
    类名注释    每日任务按钮   -->
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="100dp"/>
            <solid android:color="@color/EEEEEE"/>
            <!--<stroke-->
                <!--android:dashGap="0dp"-->
                <!--android:width="1dp"-->
                <!--android:color="@color/main_red" />-->
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="100dp"/>
            <solid android:color="#ffeeed"/>
            <stroke
                android:dashGap="0dp"
                android:width="0.5dp"
                android:color="@color/tab_select_yellow" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="100dp"/>
            <solid android:color="@color/white"/>
            <stroke
                android:dashGap="0dp"
                android:width="1dp"
                android:color="@color/tab_select_yellow" />
        </shape>
    </item>
</selector>