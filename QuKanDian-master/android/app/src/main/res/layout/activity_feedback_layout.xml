<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_gray_bg_action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f7f5f5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="#fdfcfc"
                    android:gravity="center_vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客服微信1 : "
                        android:textColor="@color/black_33"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="qkdyyy"
                        android:textColor="#fb413c"
                        android:textSize="16dp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_f2" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="#fdfcfc"
                    android:gravity="center_vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客服微信2 : "
                        android:textColor="@color/black_33"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="zhtean2"
                        android:textColor="#fb413c"
                        android:textSize="16dp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_f2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="#fdfcfc"
                    android:gravity="center_vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信公众号: "
                        android:textColor="@color/black_33"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="趣看点官方号"
                        android:textColor="#fb413c"
                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/activity_feedback_content"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:background="#f7f5f5"
                android:gravity="left"
                android:hint="请输入你的意见或建议，回复结果在（我的-消息中心）里查看"
                android:paddingLeft="19dp"
                android:paddingTop="17dp"
                android:paddingRight="19dp"
                android:paddingBottom="17dp"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传截图（最多3张） "
                    android:textColor="@color/black_33"
                    android:textSize="16dp" />

                <com.yzs.imageshowpickerview.ImageShowPickerView
                    android:id="@+id/it_picker_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    app:is_show_anim="true"
                    app:is_show_del="true"
                    app:max_num="3"
                    app:one_line_show_num="3" />

            </LinearLayout>

            <EditText
                android:id="@+id/activity_feedback_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#f7f5f5"
                android:hint="请留下您的联系方式：微信/手机号/EMAIL"
                android:lines="1"
                android:padding="17dp"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/activity_feedback_submit"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="34dp"
                android:background="@mipmap/btn_red_bg"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="18dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>