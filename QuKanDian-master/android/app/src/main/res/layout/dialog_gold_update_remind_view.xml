<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="382dp"
              android:background="@mipmap/dialog_gold_update_bg"
              android:orientation="vertical">
    <ImageView
        android:id="@+id/dialog_gold_update_remind_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:src="@mipmap/dialog_gold_update_close"
        android:layout_gravity="right"/>
    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/dialog_gold_update_remind_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:src="@mipmap/dialog_gold_update_remind_more_btn"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
