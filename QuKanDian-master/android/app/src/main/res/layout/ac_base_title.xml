<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent"
    >

    <View
        android:id="@+id/StatusBar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#33000000"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_title_height"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/baseBackIV"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/selector_common_btn_bg"
            android:padding="15dp"
            android:src="@mipmap/nav_back_green_icon"/>

        <TextView
            android:id="@+id/baseTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_title_height"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/gray_3"
            android:textSize="18dp"
            android:text="标题"
            />

        <TextView
            android:id="@+id/baseSubTitleRightTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_13_size"
            android:textColor="@color/gray_3"
            android:text=""
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/space_middle"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"
        />

    <LinearLayout
        android:id="@+id/baseLLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_grey_f2"
        android:gravity="center"
        android:orientation="vertical"
        >



        <ImageView
            android:id="@+id/errorImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/error_view"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/errorTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络开小差了~"
            android:textColor="@color/gray_9"
            android:textSize="@dimen/text_16_size"
            android:gravity="center_horizontal"
            android:visibility="gone"
            />


    </LinearLayout>
</LinearLayout>
