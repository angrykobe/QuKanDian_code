<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_new_me_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/new_me_shenmijin"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/item_new_me_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_new_me_item_img"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="9dp"
        android:text="神秘金活动"
        android:textColor="@color/black_33"
        android:textSize="13dp"
        />

    <ImageView
        android:id="@+id/item_new_me_item_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/mall_red_hot_icon"
        android:layout_marginRight="15dp"/>

    <ImageView
        android:id="@+id/imgIV"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/yytx"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        >

    </ImageView>
</RelativeLayout>
