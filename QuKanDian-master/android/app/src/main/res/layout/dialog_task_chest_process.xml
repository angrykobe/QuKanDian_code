<?xml version="1.0" encoding="utf-8"?><!--  
    类名：   dialog_task_chest_process.xml 
    类名注释       -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/share_rect_corner_bgwhite"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/share_rect_topcorner_bggray"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_02" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="任务进度"
            android:textColor="@color/gray_3"
            android:textSize="@dimen/text_17_size" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_03" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageview"
            android:layout_alignBottom="@+id/imageview"
            android:layout_toRightOf="@id/imageview"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="完成任务可领取"
                android:textColor="@color/gray_3"
                android:textSize="@dimen/text_15_size" />

            <TextView
                android:id="@+id/mGoldNumTV"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:text="999金币"
                android:textColor="#FCBA07"
                android:textSize="@dimen/text_21_size" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_small"
            android:paddingRight="@dimen/space_small"
            >

            <LinearLayout
                android:id="@+id/mOneView"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/share_bottom_line_whitebg"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_15_size"
                        android:textColor="@color/gray_3"
                        android:text="有效阅读"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:ellipsize="end"
                        />
                    <TextView
                        android:id="@id/task_chest_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_13_size"
                        android:textColor="@color/gray_3"
                        android:text="@string/task_chest_dialog_process"
                        android:layout_marginRight="3dp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="认真阅读文章并获得奖励"
                    android:textColor="@color/gray_9"
                    android:textSize="@dimen/text_13_size"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mTwoView"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/share_bottom_line_whitebg"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_15_size"
                        android:textColor="@color/gray_3"
                        android:text="阅读红包"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:ellipsize="end"
                        />
                    <TextView
                        android:id="@id/task_chest_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_13_size"
                        android:textColor="@color/gray_3"
                        android:text="@string/task_chest_dialog_process"
                        android:layout_marginRight="3dp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阅读带有红包标识的文章并获得奖励"
                    android:textColor="@color/gray_9"
                    android:textSize="@dimen/text_13_size"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mThreeView"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/share_bottom_line_whitebg"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_15_size"
                        android:textColor="@color/gray_3"
                        android:text="热搜"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:ellipsize="end"
                        />
                    <TextView
                        android:id="@id/task_chest_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_13_size"
                        android:textColor="@color/gray_3"
                        android:text="@string/task_chest_dialog_process"
                        android:layout_marginRight="3dp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="【首页】-【热搜】搜索后阅读并获得奖励"
                    android:textColor="@color/gray_9"
                    android:textSize="@dimen/text_13_size"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mFourView"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/share_bottom_line_whitebg"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_15_size"
                        android:textColor="@color/gray_3"
                        android:text="幸运任务"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:ellipsize="end"
                        />
                    <TextView
                        android:id="@id/task_chest_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_13_size"
                        android:textColor="@color/gray_3"
                        android:text="@string/task_chest_dialog_process"
                        android:layout_marginRight="3dp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完成【任务列表】的幸运任务"
                    android:textColor="@color/gray_9"
                    android:textSize="@dimen/text_13_size"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/suerTV"
        android:layout_width="212dp"
        android:layout_height="43dp"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16_size"
        android:background="@drawable/share_rect_corners_red_1"
        android:gravity="center"
        android:layout_marginTop="@dimen/space_big"
        android:layout_marginBottom="@dimen/space_big"
        />
    
</LinearLayout>