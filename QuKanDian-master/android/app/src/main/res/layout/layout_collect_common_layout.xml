<?xml version="1.0" encoding="utf-8"?>
<com.zhangku.qukandian.widght.TabLayoutCommonLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/layout_article_collect_common_tablayout"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="@color/white"
        app:tabIndicatorColor="@color/tab_select"
        app:tabIndicatorHeight="1.5dp"
        app:tabSelectedTextColor="@color/tab_select"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearanceInverse"
        app:tabTextColor="@color/black_33"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_e5"/>

    <com.zhangku.qukandian.widght.CustomViewPager
        android:id="@+id/layout_article_collect_common_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</com.zhangku.qukandian.widght.TabLayoutCommonLayout>