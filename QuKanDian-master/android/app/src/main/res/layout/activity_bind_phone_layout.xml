<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:paddingLeft="34dp"
        android:text="为了您的账号安全，请绑定手机号"
        android:textColor="@color/login_edit_gray_bg_color"
        android:textSize="14dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:background="@mipmap/login_edit_bg"
        android:orientation="vertical">

        <EditText
            android:id="@+id/bind_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/transparent"
            android:hint="请输入您的手机号"
            android:inputType="phone"
            android:lines="1"
            android:maxLength="11"
            android:padding="12dp"
            android:textColorHint="@color/login_text_hint_color"
            android:textSize="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/grey_f2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <EditText
                android:id="@+id/bind_phone_code_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="请输入验证码"
                android:inputType="number"
                android:lines="1"
                android:textColorHint="@color/login_text_hint_color"
                android:textSize="15dp"/>

            <include
                android:id="@+id/bind_phone_count"
                layout="@layout/layout_count_widght_view"/>
        </LinearLayout>

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:background="@color/grey_f2"/>-->

        <!--<EditText-->
            <!--android:id="@+id/bind_phone_password_edit"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="47dp"-->
            <!--android:background="@color/white"-->
            <!--android:hint="输入密码，长度大于6位"-->
            <!--android:inputType="textPassword"-->
            <!--android:lines="1"-->
            <!--android:maxLength="11"-->
            <!--android:padding="12dp"-->
            <!--android:textColorHint="@color/login_text_hint_color"-->
            <!--android:textSize="15dp"/>-->
    </LinearLayout>

    <Button
        android:id="@+id/bind_phone_login_btn"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="36dp"
        android:background="@mipmap/login_register_bg_icon"
        android:gravity="center"
        android:text="登录"
        android:textColor="#FFFFFF"
        android:textSize="18dp"/>

    <include
        android:id="@+id/board"
        layout="@layout/include_login_protocol"/>
</LinearLayout>