<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ad_video_img_card"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <com.zhangku.qukandian.widght.RatioImageView
            android:id="@+id/ad_video_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:RatioImageView_X="2"
            app:RatioImageView_Y="1"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/video_title_bg_icon"/>

        <TextView
            android:id="@+id/ad_video_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="15dp"
            android:text="t"
            android:textColor="@color/white"
            android:textSize="17dp"/>
        <TextView
            android:id="@+id/ad_dec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="15dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_below="@+id/ad_video_title"
            />
        <TextView
            android:id="@+id/ad_video_adtext"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/oval_black_transparent_bg"
            android:gravity="center"
            android:text="广告"
            android:textColor="@color/white"
            android:textSize="14dp"/>


        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ad_video_adtext"
            android:layout_alignTop="@+id/ad_video_adtext"
            android:layout_alignBottom="@+id/ad_video_adtext"
            android:layout_marginRight="6dp"
            />

        <FrameLayout
            android:id="@+id/addView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ad_other_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/ad_bg"
            android:paddingLeft="18dp"
            android:paddingRight="18dp">

            <ImageView
                android:id="@+id/ad_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/ad_red"/>

            <TextView
                android:id="@+id/ad_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ad_icon"
                android:text="阅读领取"
                android:textColor="@color/red_500"
                android:textSize="12dp"/>

            <ImageView
                android:id="@+id/ad_texts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ad_text"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
