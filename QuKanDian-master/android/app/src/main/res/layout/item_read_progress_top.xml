<?xml version="1.0" encoding="utf-8"?><!--
    类名：   item_dialog_newpeople_task.xml
    类名注释       -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/ll_titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="阅读"
            android:textColor="#222222"
            android:textSize="@dimen/text_15_size" />

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="0"
            android:textColor="#FF7F00"
            android:textSize="@dimen/text_15_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="篇红包文章"
            android:textColor="#222222"
            android:textSize="@dimen/text_15_size" />

        <TextView
            android:id="@+id/tv_add_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="+0金币"
            android:textColor="#FFA112"
            android:textSize="@dimen/text_12_size" />
    </LinearLayout>


    <TextView
        android:id="@+id/mTaskStateTV"
        android:layout_width="66dp"
        android:layout_height="23dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/share_recir_tranbg_redframe"
        android:gravity="center"
        android:text="领取"
        android:textColor="@color/tab_select_new"
        android:textSize="12sp" />

    <ProgressBar
        android:id="@+id/mProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_below="@+id/ll_titleTV"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/space_small"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@+id/mTaskStateTV"
        android:progressDrawable="@drawable/process_read_progress" />

    <TextView
        android:id="@+id/mProgressTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/mProgressBar"
        android:layout_marginTop="-2dp"
        android:layout_toRightOf="@id/mProgressBar"
        android:text="1/1"
        android:textColor="#D49F5E"
        android:textSize="@dimen/text_10_size"
        android:visibility="gone" />

</RelativeLayout>