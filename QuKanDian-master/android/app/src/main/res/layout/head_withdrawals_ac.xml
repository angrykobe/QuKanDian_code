<?xml version="1.0" encoding="utf-8"?><!--  
    类名：   head_withdrawals_ac.xml 
    类名注释       -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.zhangku.qukandian.widght.TextSwitcherView
        android:id="@+id/task_activity_marquee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/FFF6E5"
        android:paddingLeft="@dimen/space_big"
        android:paddingTop="3dp"
        android:paddingRight="@dimen/space_big"
        android:paddingBottom="3dp" />

    <com.zhangku.qukandian.widght.AdViewPager
        android:id="@+id/withdrawalsAdView"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@color/white" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_f2"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_big"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="19dp">

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的余额(金币)"
            android:textColor="@color/gray_3"
            android:textSize="@dimen/text_10_size" />

        <TextView
            android:id="@+id/withdrawalsMyGoldNumTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview"
            android:text="30000"
            android:textColor="@color/gray_3"
            android:textSize="@dimen/text_30_size" />

        <TextView
            android:id="@+id/withdrawalsIncomeTV"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/textview"
            android:layout_alignParentRight="true"
            android:background="@drawable/share_recir_red"
            android:ems="6"
            android:gravity="center"
            android:text="收支明细"
            android:textColor="@color/black_33" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_small"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_big"
            android:paddingTop="22dp"
            android:text="提现方式"
            android:textColor="@color/gray_3"
            android:textSize="@dimen/text_15_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_withdrawals_wechat"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@mipmap/icon_withdrawals_type_selected"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@mipmap/icon_wx"
                    android:drawablePadding="7dp"
                    android:text="微信"
                    android:textColor="@color/gray_3" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_withdrawals_alipay"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@mipmap/icon_withdrawals_type_normal"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@mipmap/icon_zfb"
                    android:drawablePadding="7dp"
                    android:text="支付宝"
                    android:textColor="@color/gray_3" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:gravity="center_vertical"-->
    <!--android:paddingLeft="@dimen/space_big"-->
    <!--android:paddingTop="22dp"-->
    <!--android:text="请选择要提现的金额"-->
    <!--android:textColor="@color/gray_3"-->
    <!--android:layout_marginBottom="@dimen/space_small"-->
    <!--android:textSize="@dimen/text_15_size" />-->
    <LinearLayout
        android:id="@+id/mSmartWithdrawalsTitleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_small"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_big"
            android:text="小额提现"
            android:textColor="@color/gray_3"
            android:textSize="@dimen/text_15_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_small"
            android:gravity="center_vertical"
            android:text="（提现需先完成指定小任务）"
            android:textColor="@color/gray_9"
            android:textSize="@dimen/text_12_size" />


        <TextView
            android:id="@+id/tv_more_welfare"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/share_recir_tranbg_yellowframe"
            android:gravity="center"
            android:paddingLeft="@dimen/text_16_size"
            android:paddingRight="@dimen/text_16_size"
            android:text="@string/withdrawals_welfare"
            android:textColor="#ffa000"
            android:textSize="@dimen/text_13_size" />


    </LinearLayout>
</LinearLayout>