<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="335dp"
    android:layout_height="445dp"
    android:orientation="vertical"
    android:background="@color/transparent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/share_rect_corner_bgwhite"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/mTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textColor="@color/gray_6"
                android:textSize="@dimen/text_13_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:maxLines="1"
                android:text="关注微信公众号看更多赚零花的攻略"
                android:textColor="@color/gray_3"
                android:textSize="@dimen/text_14_size" />

            <ImageView
                android:id="@+id/mCodeIV"
                android:layout_width="240dp"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/space_small" />

            <TextView
                android:id="@+id/mSaveImgTV"
                android:layout_width="230dp"
                android:layout_height="43dp"
                android:layout_marginTop="@dimen/space_middle"
                android:background="@drawable/share_recir_red"
                android:gravity="center"
                android:text="保存二维码并去微信关注"
                android:textColor="@color/black_33"
                android:textSize="@dimen/text_15_size" />

            <TextView
                android:id="@+id/mDescTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_big"
                android:text="标题"
                android:textColor="@color/gray_6"
                android:textSize="@dimen/text_13_size" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/closeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="@dimen/space_middle"
        android:src="@mipmap/icon_close_for_task"
        android:visibility="gone"
        />

</FrameLayout>