<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/space_middle">

    <ImageView
        android:id="@+id/img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/space_small"
        android:src="@mipmap/icon_txdh" />

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/img"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="新手答题"
        android:textColor="#333333"
        android:textSize="@dimen/text_15_size" />


    <TextView
        android:id="@+id/mTaskStateTV"
        android:layout_width="71dp"
        android:layout_height="23dp"
        android:layout_alignTop="@id/titleTV"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_frame_white_red"
        android:gravity="center"
        android:text="去完成"
        android:textColor="@color/tab_select_new"
        android:textSize="@dimen/text_11_size" />


</RelativeLayout>