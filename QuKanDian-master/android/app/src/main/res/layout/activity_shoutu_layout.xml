<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">
    <include layout="@layout/layout_gray_bg_action_bar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_e5"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/activity_shoutu_layout_tablayout"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="@color/white"
        app:tabIndicatorColor="@color/main_red"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearanceInverse"
        app:tabIndicatorHeight="1.5dp"
        app:tabSelectedTextColor="@color/main_red"
        app:tabTextColor="@color/black_33"/>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.5dp"-->
        <!--android:background="@color/grey_e5"/>-->
    <include layout="@layout/layout_viewpager"/>
</LinearLayout>