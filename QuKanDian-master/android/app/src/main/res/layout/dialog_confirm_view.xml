<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/white_fillet_bg"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="7dp">

    <TextView
        android:id="@+id/dialog_confirm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="确认框标题"
        android:textColor="#1B1B1D"
        android:textSize="19dp"
        android:layout_marginLeft="@dimen/space_big"
        android:layout_marginRight="@dimen/space_big"
        />

    <TextView
        android:id="@+id/dialog_confirm_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="确认框内容"
        android:textColor="@color/gray_9"
        android:textSize="@dimen/text_16_size"
        android:layout_marginLeft="@dimen/space_big"
        android:layout_marginRight="@dimen/space_big"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="23dp"
        android:background="@color/grey_f2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_f2">

        <TextView
            android:id="@+id/dialog_confirm_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="取消"
            android:textColor="@color/black_33"
            android:textSize="17dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/dialog_confirm_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="确认"
            android:textColor="@color/main_red"
            android:textSize="17dp"/>
    </LinearLayout>
</LinearLayout>