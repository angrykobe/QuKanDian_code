<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_common_btn_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_withdrawals_money_free"
        android:layout_width="101dp"
        android:layout_height="76dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/item_withdrawals_normal"
        android:textColor="#FB2A2A"
        android:textSize="17dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/item_withdrawals_money_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="14dp"
        android:textColor="@color/black_33"
        android:textSize="12dp" />
</LinearLayout>
