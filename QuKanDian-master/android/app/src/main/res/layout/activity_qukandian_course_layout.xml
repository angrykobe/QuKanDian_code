<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/layout_gray_bg_action_bar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_e5"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_qukandian_course_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_big"
        android:paddingRight="@dimen/space_big"
        android:background="@color/main_grey_f2"
        android:paddingBottom="@dimen/space_middle"
        android:paddingTop="@dimen/space_middle"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有你想要的？去客服中心反馈试试吧"
            android:textSize="@dimen/text_14_size"
            android:textColor="@color/gray_3"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/space_small"
            />
        <TextView
            android:id="@+id/feedbackTV"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="我要反馈"
            android:gravity="center"
            android:ems="6"
            android:background="@drawable/selector_sign_radio"
            android:textColor="@color/white"

            />

    </LinearLayout>
</LinearLayout>