<?xml version="1.0" encoding="utf-8"?><!--  
    类名：   dialog_show_level.xml 
    类名注释       -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/levle_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/levelIconIV"
                android:layout_width="73dp"
                android:layout_height="63dp"
                android:src="@mipmap/pop_1" />

            <TextView
                android:id="@+id/levelNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_small"
                android:layout_toRightOf="@+id/levelIconIV"
                android:text="青铜会员"
                android:textColor="@color/white"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/goldNumTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/levelNameTV"
                android:layout_alignLeft="@+id/levelNameTV"
                android:layout_marginTop="@dimen/space_small"
                android:ellipsize="end"
                android:maxEms="8"
                android:maxLines="1"
                android:text="@string/level_gold"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/closeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:padding="10dp"
            android:src="@mipmap/icon_close_for_task" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/everydayTaskTitleTV"
            android:layout_width="140dp"
            android:layout_height="41dp"
            android:background="@drawable/selector_level_left"
            android:gravity="center"
            android:text="每日任务"
            android:textColor="#6F160A" />

        <TextView
            android:id="@+id/levelTitleTV"
            android:layout_width="140dp"
            android:layout_height="41dp"
            android:background="@drawable/selector_level_right"
            android:gravity="center"
            android:text="等级特权"
            android:textColor="#6F160A" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/share_white_bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_day_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="@dimen/text_10_size"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:text="@string/task_tip"
                    android:textColor="@color/title_color_new"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/tab_select_new"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/task_tip2"
                    android:textColor="@color/title_color_new"
                    android:textSize="17sp" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:fadeScrollbars="false"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarDefaultDelayBeforeFade="0"
                android:scrollbarFadeDuration="0"
                android:scrollbarSize="6dp"
                android:scrollbarStyle="insideOverlay"
                android:scrollbarThumbVertical="@drawable/share_scroll_ver"
                android:scrollbarTrackVertical="@drawable/share_scroll_ver_bg"
                android:scrollbars="vertical" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/everydayTaskView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="25dp">

                <TextView
                    android:id="@+id/mOneTaskDesTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/gray_3"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/mTwoTaskDesTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_weight="1"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/gray_3"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/mThreeTaskDesTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/gray_3"
                    android:textSize="16dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mOneTaskImg"
                    style="@style/chest_top_iv"
                    android:layout_width="wrap_content"
                    android:src="@drawable/selec_task_box_coppe" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/arrow" />

                <ImageView
                    android:id="@+id/mTwoTaskImg"
                    style="@style/chest_top_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selec_task_box_silver" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/arrow" />

                <ImageView
                    android:id="@+id/mThreeTaskImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/selec_task_box_gold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/levelDesView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/space_big"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="当前等级特权"
                android:textColor="@color/gray_9"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/levelDesTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_middle"
                android:lineSpacingMultiplier="1.1"
                android:text="每日登陆获得额外10000金币升级即可获得10000金币奖励"
                android:textColor="@color/gray_3"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="下一等级新增特权"
                android:textColor="@color/gray_9"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/nextLevelDesTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_middle"
                android:lineSpacingExtra="5dp"
                android:text="签到额外奖励999金币"
                android:textColor="@color/gray_3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/moreLevelDesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_big"
                android:text="更多特权>>"
                android:textColor="#fffb413c"
                android:textSize="14dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/submitTV"
            android:layout_width="212dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/space_middle"
            android:background="@drawable/share_rect_corners_red_1"
            android:gravity="center"
            android:text="更多任务"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>