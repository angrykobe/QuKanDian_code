<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/share_rect_corner_bgwhite"
    android:paddingLeft="@dimen/space_big"
    android:paddingRight="@dimen/space_big"
    android:paddingBottom="@dimen/space_middle"
    >

    <ImageView
        android:id="@+id/closeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_cancel_icon"
        android:layout_gravity="right"
        android:paddingLeft="@dimen/space_small"
        android:paddingBottom="@dimen/space_small"
        android:paddingTop="@dimen/space_small"
        />

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新人任务奖励"
        android:textSize="@dimen/text_15_size"
        android:textColor="@color/gray_3"
        android:layout_marginTop="-15dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/newpeople_get_gold"
        android:layout_marginTop="@dimen/space_small"
        />

    <TextView
        android:id="@+id/contentTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_people_done_task"
        android:textSize="@dimen/text_19_size"
        android:textColor="@color/ff7421"
        android:layout_marginTop="@dimen/space_middle"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="什么是金币?"
        android:textSize="@dimen/text_16_size"
        android:textColor="@color/ff7421"
        android:drawablePadding="@dimen/space_small"
        android:layout_marginTop="@dimen/space_middle"
        android:drawableLeft="@mipmap/guide_postion_yellow_selected"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="金币是趣看视界平台内流通的货币，金币可直接提现到微信"
        android:textSize="@dimen/text_15_size"
        android:textColor="@color/gray_6"
        android:layout_marginTop="@dimen/space_small"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="可在【我的】-【提现兑换】进行提现"
        android:textSize="@dimen/text_15_size"
        android:textColor="@color/gray_6"
        android:layout_marginTop="3dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="怎样赚更多金币？"
        android:textSize="@dimen/text_16_size"
        android:textColor="@color/ff7421"
        android:drawablePadding="@dimen/space_small"
        android:layout_marginTop="@dimen/space_middle"
        android:drawableLeft="@mipmap/guide_postion_yellow_selected"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="阅读文章、邀请好友、做任务都可以获得金币"
        android:textSize="@dimen/text_15_size"
        android:textColor="@color/gray_6"
        android:layout_marginTop="@dimen/space_small"
        />

    <TextView
        android:id="@+id/doneOtherTaskBtn"
        android:layout_width="212dp"
        android:layout_height="43dp"
        android:text="继续完成其他任务"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16_size"
        android:background="@drawable/share_btn_bgred_radio"
        android:layout_marginTop="@dimen/space_small"
        />

</LinearLayout>