<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black">

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/positionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/guid_position_01"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/guid_postion_selected"/>

        <ImageView
            android:id="@+id/guid_position_02"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/guid_postion_selected"/>

        <ImageView
            android:id="@+id/guid_position_03"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/guid_postion_selected"/>
    </LinearLayout>

    <TextView
        android:id="@+id/guide_btn"
        android:layout_width="167dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/share_orgframe"
        android:textColor="#FF6A13"
        android:textSize="@dimen/text_17_size"
        android:text="立即体验"
        android:gravity="center"
        android:visibility="gone"
        />
</RelativeLayout>