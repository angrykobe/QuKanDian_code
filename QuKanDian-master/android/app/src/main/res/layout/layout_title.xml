<?xml version="1.0" encoding="utf-8"?>
<com.zhangku.qukandian.widght.ActionBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_title_layout"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="@color/main_gray"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_gray"
        android:gravity="bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/main_gray"
            android:layout_height="@dimen/layout_title_height">

            <ImageView
                android:id="@+id/layout_title_back"
                android:layout_width="48dp"
                android:layout_height="@dimen/layout_title_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_common_btn_bg"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/btn_nav_back"
                android:visibility="invisible"/>

            <LinearLayout
                android:id="@+id/layout_title_menu"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_title_height"
                android:layout_alignParentRight="true"
                android:minWidth="48.0dp"
                android:orientation="horizontal"/>


            <TextView
                android:id="@+id/layout_title_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_title_height"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/black_33"
                android:textSize="18dp"/>
        </RelativeLayout>
    </LinearLayout>

</com.zhangku.qukandian.widght.ActionBarLayout>
