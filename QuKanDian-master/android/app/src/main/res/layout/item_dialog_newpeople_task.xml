<?xml version="1.0" encoding="utf-8"?><!--  
    类名：   item_dialog_newpeople_task.xml 
    类名注释       -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/share_yellowbg_grayframe"
    android:orientation="vertical"
    android:padding="@dimen/space_middle"
    android:layout_marginRight="@dimen/space_small"
    android:layout_marginBottom="8dp"
    >

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新手答题"
        android:textColor="#9F6012"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="80dp"
        android:textSize="@dimen/text_15_size" />

    <LinearLayout
        android:id="@+id/linnerlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTV"
        android:layout_marginTop="@dimen/space_small"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_gold" />

        <TextView
            android:id="@+id/mGoldNumTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1000"
            android:textColor="@color/tab_select_new"
            android:layout_marginLeft="3dp"
            android:textSize="@dimen/text_12_size" />


    </LinearLayout>

    <TextView
        android:id="@+id/mTaskStateTV"
        android:layout_width="76dp"
        android:layout_height="23dp"
        android:layout_alignTop="@id/titleTV"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_task_newpeople_dialog"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/selector_white_red_1"
        android:textSize="@dimen/text_11_size"
        />

    <ProgressBar
        android:id="@+id/mProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_below="@+id/linnerlayout"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/space_small"
        android:progressDrawable="@drawable/process_newpeople_task"
        android:layout_toLeftOf="@+id/mTaskStateTV"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/mProgressTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/1"
        android:layout_alignTop="@id/mProgressBar"
        android:layout_toRightOf="@id/mProgressBar"
        android:textColor="#D49F5E"
        android:textSize="@dimen/text_10_size"
        android:layout_marginTop="-2dp"
        />

</RelativeLayout>