<?xml version="1.0" encoding="utf-8"?><!--  
    类名：   item_myself_adview.xml 
    类名注释       -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tencent.smtt.sdk.WebView
        android:id="@+id/linkWebview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/myselfView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <!--标题-->
                <TextView
                    android:id="@+id/adTitleTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lineSpacingExtra="5dp"
                    android:maxLines="2"
                    android:text="标题"
                    android:textColor="@color/black_1b"
                    android:textSize="@dimen/text_18_size" />


                <!--三图-->
                <LinearLayout
                    android:id="@+id/adThreeImgView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="visible">

                    <com.zhangku.qukandian.widght.RatioImageView
                        android:id="@+id/adOneIV"
                        style="@style/art_image"
                        android:layout_weight="1" />

                    <com.zhangku.qukandian.widght.RatioImageView
                        android:id="@+id/adTwoIV"
                        style="@style/art_image"
                        android:layout_marginLeft="@dimen/space_small"
                        android:layout_marginRight="@dimen/space_small"
                        android:layout_weight="1" />


                    <com.zhangku.qukandian.widght.RatioImageView
                        android:id="@+id/adThreeIV"
                        style="@style/art_image"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
            <!--单大图-->
            <com.zhangku.qukandian.widght.RatioImageView
                android:id="@+id/adRightImageView"
                style="@style/art_image"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
        <!--底部红包展示-->
        <LinearLayout
            android:id="@+id/bottomRedView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@mipmap/ad_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/bottomRedIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:background="@mipmap/ad_red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="阅读领取"
                android:textColor="@color/red_500"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/mAdSignIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ad_text" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>