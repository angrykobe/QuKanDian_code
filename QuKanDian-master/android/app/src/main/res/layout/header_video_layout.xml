<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="19dp">

        <TextView
            android:id="@+id/header_video_layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_33"
            android:textSize="@dimen/information_title_size"/>
        <!--播放次数-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp">

            <TextView
                android:id="@+id/header_video_layout_play_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_12_size"
                android:textColor="@color/black_66"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/header_video_layout_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_12_size"
                android:textColor="@color/black_66"/>
        </LinearLayout>

        <!--点赞和不喜欢-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:layout_gravity="center"
            >
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                >
                <TextView
                    android:id="@+id/header_video_layout_play_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:textSize="@dimen/text_12_size"
                    android:textColor="@color/selector_gray_red"
                    android:background="@drawable/selector_frame_gray_red"
                    android:drawableLeft="@drawable/selector_praise"
                    android:minEms="5"
                    android:ems="4"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text=""
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    />
                <!--点赞动画需要控件-->
                <TextView
                    android:id="@+id/header_information_layout_praise_anim_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="5"
                    android:text="+1"
                    android:textColor="#F43D19"
                    android:textSize="@dimen/text_12_size"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="bottom|center_horizontal"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                >
                <TextView
                    android:id="@+id/header_video_layout_play_nolike"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:textSize="@dimen/text_12_size"
                    android:textColor="@color/black_66"
                    android:background="@drawable/bg_hollow_frame_gray"
                    android:drawableLeft="@mipmap/bxh"
                    android:text="不喜欢"
                    android:layout_marginLeft="50dp"
                    android:minEms="5"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    />
            </FrameLayout>

        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/grey_f2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="17dp"
        android:text="相关视频"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_e5"/>
    <!--&lt;!&ndash;？？？？？好像是广告的布局，一个webview布局 一个图片布局&ndash;&gt;-->
    <!--<include layout="@layout/details_ad_view"/>-->
    <!--<include layout="@layout/layout_ad_webview"/>-->

    <com.zhangku.qukandian.widght.DetailBigImgAdView
        android:id="@+id/bigImgAdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <View
        android:id="@+id/ad_header_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_e5"/>
</LinearLayout>