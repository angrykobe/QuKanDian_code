<?xml version="1.0" encoding="utf-8"?><!--  
    类名：   dialog_for_new_people_task.xml 
    类名注释       -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="357dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="44dp"
        android:background="@mipmap/bg_newpeople_one_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/space_middle"
            android:src="@mipmap/gray_cancel_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:text="申请成功，您已成为"
            android:textColor="@color/gray_3"
            android:textSize="@dimen/text_15_size" />

        <TextView
            android:id="@+id/mLevelNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            android:text="青铜用户"
            android:textColor="#F54D38"
            android:textSize="27dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等级越高特权越多，赚钱越快！"
            android:textColor="@color/gray_9"
            android:layout_marginTop="@dimen/space_big"
            android:textSize="@dimen/text_15_size" />

        <TextView
            android:id="@+id/mMoreDesTV"
            android:layout_width="230dp"
            android:layout_height="43dp"
            android:background="@drawable/share_rect_corners_red_1"
            android:gravity="center"
            android:text="更多等级信息"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15_size"
            android:layout_marginTop="25dp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/mLevelImg"
        android:layout_width="187dp"
        android:layout_height="161dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/pop_1" />
</FrameLayout>