<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#cccccc"
    android:orientation="vertical"
    tools:context="com.zhangku.qukandian.activitys.task.QuBaoGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <com.cmcm.cmgame.GameView
            android:id="@+id/gameView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="15dp"
            app:cmgame_category_title_text_color="#FF222222"
            app:cmgame_category_title_text_size="15sp"
            app:cmgame_tab_indicator_color="#FF009AFF"
            app:cmgame_tab_indicator_height="3dp"
            app:cmgame_tab_indicator_cornerRadius="1.5dp"
            app:cmgame_tab_title_text_select_color="#009AFF"
            app:cmgame_tab_title_text_not_select_color="#999999"
            app:cmgame_view_background="@drawable/bg_game_classify_view" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>