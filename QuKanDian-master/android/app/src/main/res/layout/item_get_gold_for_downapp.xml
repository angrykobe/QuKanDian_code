<?xml version="1.0" encoding="utf-8"?><!--  
    类名：   item_get_gold_for_downapp.xml 
    类名注释       -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="75dp"
    android:paddingLeft="@dimen/space_middle"
    android:paddingRight="@dimen/space_middle"
    android:paddingTop="@dimen/space_small"
    android:paddingBottom="@dimen/space_small"
    android:gravity="center_vertical"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/appImg"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:src="@mipmap/app_icon"
        android:layout_marginRight="@dimen/space_small"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/appStaringTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="进行中"
            android:textColor="@color/ff7421"
            android:textSize="@dimen/text_16_size"
            android:gravity="center_vertical"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/appNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/gray_3"
            android:textSize="@dimen/text_16_size"
            android:layout_weight="1"
            android:gravity="center_vertical"
        />
        <TextView
            android:id="@+id/appDecTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/gray_9"
            android:textSize="@dimen/text_12_size"
            android:layout_weight="1"
            android:gravity="center_vertical"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/goldNumTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+100"
        android:textColor="@color/ff7421"
        android:textSize="@dimen/text_16_size"
        android:gravity="center_vertical"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/down_app_jb"
        />
</LinearLayout>