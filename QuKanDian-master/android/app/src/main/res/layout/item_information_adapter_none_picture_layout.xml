<?xml version="1.0" encoding="utf-8"?>
<com.zhangku.qukandian.widght.ItemInformationAdapterNonePictureLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_information_adapter_none_pic_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/item_information_adapter_none_pic_placeholder"
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_information_adapter_none_pic_placeholder"
            android:orientation="vertical"
            android:paddingBottom="17dp"
            android:paddingTop="17dp">

            <TextView
                android:id="@+id/item_information_adapter_none_pic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:gravity="left"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/black_1b"
                android:textSize="@dimen/text_18_size"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">
                <!--高价文标识-->
                <TextView
                    android:id="@+id/item_information_adapter_one_pic_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:background="@mipmap/xsgj"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/item_information_adapter_none_pic_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/top_background"
                    android:text="置顶"
                    android:textColor="@color/red_500"
                    android:textSize="8dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/item_information_adapter_none_pic_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:textColor="@color/black_a9"
                    android:textSize="@dimen/information_infor_size"/>

                <TextView
                    android:id="@+id/item_information_adapter_none_pic_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="@color/black_a9"
                    android:textSize="@dimen/information_infor_size"/>

                <TextView
                    android:id="@+id/item_information_adapter_none_pic_share_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="16dp"
                    android:drawableLeft="@mipmap/home_share_icon"
                    android:drawablePadding="2dp"
                    android:text="20金币"
                    android:textColor="@color/black_a9"
                    android:textSize="@dimen/information_infor_size"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/item_information_adapter_none_pic_releas_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:textColor="@color/black_a9"
                    android:textSize="@dimen/information_infor_size"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_information_adapter_none_pic_layout_select"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/item_information_adapter_none_pic_layout_select_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/collect_select_bg"/>
        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/item_read_record_view"/>
</com.zhangku.qukandian.widght.ItemInformationAdapterNonePictureLayout>
