<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="294dp"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/recommended_daily_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@mipmap/recommended_daily_bottom"
        android:padding="10dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialog_recommend_daily_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_recommend_daily_dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/details_taks_cancel"/>
</LinearLayout>
